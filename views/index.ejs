<!DOCTYPE html>
<html lang="en">
  <head>
    
    <meta charset="utf-8" />
    <link rel="icon" href="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Login</title>

    <!-- Import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="./css/bootstrap.min.css"> 
  </head>
  <body>
    
    <section id="nav-bar">
      <nav class="nav justify-content-center">
        <a class="nav-link" href="#">About</a>
        <a class="nav-link" href="/new-posts">New Posts</a>
        <a class="nav-link" href="/top-posts">Top Posts</a>
        <a class="nav-link" href="/register">Register</a>
      </nav>
    </section>

    <section id="form-section" class="form-group">
      <header>
        <h3 id="login-title">
          Login
        </h3>
      </header>
      <form id="login-form" name="form" method="post" action="/login" style="position:relative; top:-10px">
        <label for="email-input">
          Email
          <input
            name="email"
            id="email-input"
            type="text"
            maxlength="100"
            placeholder="example@email.com"
            class="form-control"
          />
        </label>
        <br />
        <label for="password-input">
          Password
          <input
            name="password"
            id="password-input"
            type="password"
            maxlength="50"
            minlength="6"
            placeholder="******"
            class="form-control"
          />
        </label>
        <br />
        <label for="login-button">
          <button type="submit" id="login-button" class="form-control btn btn-outline-primary">Login</button>
        </label>
      </form>
      <footer>
        Don't have an account? <a href="/register">Register here</a>!
      </footer>
    </section>
  </body>
  
  <script>
    let title = document.querySelector("#login-title");
    let form = document.querySelector("#login-form");
    
    const checkWin = () => {
      if(window.innerHeight < 500){
        title.style.top = "-30px";
        form.style.top = "-30px";
      } else {
        title.style.top = "0px";
        form.style.top = "0px";
      }
    }
    
    checkWin();
    
    window.addEventListener("resize", checkWin)
    
  </script>
</html>
